generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPERADMIN
  ADMIN
  CLIENT
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?

  /// Notas internas (BO) para apuntar cosas sobre el usuario.
  notes     String?

  password  String?
  role      Role     @default(CLIENT)
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  disabled  Boolean  @default(false)
  availableClasses Int @default(0)

  emailVerifiedAt DateTime?
  verifyTokenHash String?
  verifyTokenExp  DateTime?

  resetTokenHash String?
  resetTokenExp  DateTime?

  oauthProvider   String?
  oauthSubject    String?

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PageStatus {
  ACTIVE
  UNDER_CONSTRUCTION
  INACTIVE
}

model Page {
  id        String     @id @default(cuid())
  path      String     @unique

  /** Nombre opcional para mostrar en BO */
  name      String?

  status    PageStatus @default(ACTIVE)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([status])
}

enum BookingStatus {
  ACTIVE
  CANCELED
}

model ClassSession {
  id         String   @id @default(cuid())

  // Info visible
  title      String
  type       String   // "Pilates suelo", "Reformer", etc.
  instructor String?
  notes      String?

  // Fecha/hora
  startsAt   DateTime
  endsAt     DateTime

  // Aforo
  capacity   Int      @default(10)

  bookings   Booking[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([startsAt])
}

model Booking {
  id         String        @id @default(cuid())
  status     BookingStatus @default(ACTIVE)

  /// Asistencia (BO): si el cliente asisti√≥ a la clase reservada.
  attended   Boolean       @default(true)
  attendedAt DateTime?

  sessionId  String
  userId     String

  session    ClassSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt  DateTime      @default(now())
  canceledAt DateTime?

  @@unique([sessionId, userId])
  @@index([userId, status])
  @@index([sessionId, status])
}
